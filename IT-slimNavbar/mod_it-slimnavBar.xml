<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
<name>IT-slimNavBar Module</name>
<author>Sourav Prasad</author>
<creationDate>March 2019</creationDate>
<copyright>Copyright (C) 2019</copyright>
<license>GNU General Public License version 2 or later</license>
<authorEmail>souravpd007@gmail.com</authorEmail>
<version>1.0.0</version>
<description>Place a Bootstrap-Italia Slim Navigation Bar anywhere in your project</description>
<files>
        <filename module="mod_it-slimnavBar">mod_it-slimnavBar.php</filename>
        <filename>index.html</filename>
        <filename>mod_it-slimnavBar.xml</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/svg/sprite.svg</filename>
        <filename>tmpl/bootstrap-italia.min.css</filename>
        <filename>tmpl/bootstrap-italia.bundle.min.js</filename>
</files>
<config>
<fields name="params"> 
    <fieldset name="basic">
    <field 
                        name="slimHeaderSuffix" 
                        type="text" 
                        default="" 
                        label="Suffix for the slim navigation header wrapper div" 
                        description="Add CSS classes to the it-header-slim-wrapper div">
                    </field>
     <field name="brandLink" type="text" default="" label="Brand Image link " description="The link for the Brand Image">
                    </field> 
     <field name="brandText" type="text" default="Ente appartenenza/Owner" label="Brand Text" description="The brand Logo text">
                    </field> 
    <field name="linkOne" type="text" default="#" label="Link one" description="Link one">
                    </field>
    <field name="linkOneText" type="text" default="Link one" label="Link one text" description="Link one Text">
                    </field>
    <field name="linkTwo" type="text" default="#" label="Link two" description="Link two">
                    </field>
    <field name="linkTwoText" type="text" default="Link two" label="Link two text" description="Link two Text">
                    </field>
    <field name="dropdownlinkOne" type="text" default="#" label=" dropdown Link one" description=" dropdown Link one">
                    </field>
    <field name="dropdownlinkOneText" type="text" default="dropdown Link one" label=" dropdownLink one text" description=" dropdown Link one Text">
                    </field>
    <field name="dropdownlinkTwo" type="text" default="#" label="dropdown Link two" description="Link two">
                    </field>
    <field name="dropdownlinkTwoText" type="text" default="dropdown Link two" label=" dropdown Link two text" description=" dropdown Link two Text">
                    </field>
    <field name="buttonLink" type="text" default="#" label="button Link " description="The link for the button">
                    </field> 
    <field name="buttonText" type="text" default="Log in" label="Button text" description="The text for the button">
                    </field> 
   </fieldset>
</fields>
</config>
</extension>
